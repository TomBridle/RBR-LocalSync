{
  "name": "local-sync-app-electron",
  "version": "1.0.0",
  "description": "Local sync app with WebSocket and .ini file monitoring",
  "main": "index.js",
  "author": "Tom Bridle",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-packager . Pacenote Sync --platform=win32 --arch=x64 --out=release-builds --icon=assets/icon.ico",
    "dist": "electron-builder --win",
    "build": "electron-builder"
  },
  "build": {
    "appId": "pacenotesync.app.id",
    "productName": "Pacenote Sync",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.js",
      "node_modules/**/*",
      "package.json",
      "parseCodriver.js"
    ],
    "extraResources": [
      "assets/icon.ico"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "bonjour": "^3.5.0",
    "chokidar": "^3.5.2",
    "fs-extra": "^11.2.0",
    "ini": "^2.0.0",
    "memoryjs": "^3.5.1",
    "ref-napi": "^3.0.3",
    "sqlite3": "^5.1.7",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "electron": "^13.6.9",
    "electron-builder": "^25.1.8"
  }
}
